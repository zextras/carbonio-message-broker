  "https://github.com/rabbitmq/rabbitmq-server/releases/download/v3.12.6/rabbitmq-server-3.12.6.tar.xz"
  "carbonio-customizations.patch"
  "${pkgname}"
  "${pkgname}-set-admin"
  "${pkgname}-set-user"
  "${pkgname}-setup.sh"
  "${pkgname}-sidecar.service"
  "${pkgname}.hcl"
  "${pkgname}.logrotate"
  "${pkgname}.service"
  "${pkgname}.sysusers"
  "${pkgname}.tmpfiles"
  "default_schema.json"
  "enabled_plugins"
  "intentions.json"
  "policies.json"
  "rabbitmq-env.conf"
  "rabbitmq.conf"
  "service-protocol.json"
)
backup=(
  "etc/carbonio/message-broker/enabled_plugins"
  "etc/carbonio/message-broker/rabbitmq-env.conf"
  "etc/carbonio/message-broker/conf.d/rabbitmq.conf"
  "etc/zextras/service-discover/${pkgname}.hcl"
)
