  "${pkgname}-set-admin"
  "${pkgname}-set-user"
  "${pkgname}-setup.sh"
  "${pkgname}-sidecar.service"
  "${pkgname}.hcl"
  "${pkgname}.logrotate"
  "${pkgname}.service"
  "${pkgname}.sysusers"
  "${pkgname}.tmpfiles"
