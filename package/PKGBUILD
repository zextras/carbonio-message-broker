  "carbonio-elixir"
  "carbonio-erlang"
  "carbonio-openssl"
  "python3"
  "rsync"
)
depends__yum=(
  "carbonio-erlang"
  "carbonio-openssl"
  "pending-setups"
  "python3"
  "service-discover"
  "socat"
)
makedepends__yum=(
  "carbonio-elixir"
  "carbonio-erlang"
  "carbonio-openssl"
  "python3"
  "rsync"
)
